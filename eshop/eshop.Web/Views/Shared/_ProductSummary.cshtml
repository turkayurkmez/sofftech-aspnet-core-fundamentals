@model Product
<div class="card">
    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
        <p class="card-text">@Model.Price TL</p>

        <button class="btn btn-primary basket" data-id="@Model.Id">Sepete Ekle</button>
    </div>
</div>